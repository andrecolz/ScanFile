<Window x:Class="ScanFile.Confronta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScanFile"
        mc:Ignorable="d"
        Title="Confronta" Height="450" Width="800">
    <Grid Background="#FFC8B6A6">
        <Button x:Name="btnPath1" Content="File 1:" HorizontalAlignment="Left" Height="27" Margin="46,13,0,0" VerticalAlignment="Top" Width="115" Click="Button_Click"/>
        <Button x:Name="btnPath2" Content="File 2:" HorizontalAlignment="Left" Margin="46,40,0,0" VerticalAlignment="Top"  Height="27" Width="115" Click="btnPath2_Click"/>
        <Label x:Name="lblpath1" HorizontalAlignment="Left" Margin="161,13,0,0" VerticalAlignment="Top" Height="27" Width="239" Background="White"/>
        <Button x:Name="btnConfronto" Content="Confronta:" HorizontalAlignment="Left" Height="27" Margin="46,67,0,0" VerticalAlignment="Top" Width="354" Click="btnConfronto_Click"/>
        <Label x:Name="lblpath2" HorizontalAlignment="Left" Margin="161,40,0,0" VerticalAlignment="Top" Height="27" Width="239" Background="White"/>
        <ListBox x:Name="lstbElenco" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="416,12,10,10" Background="#FFDDE6ED" FontFamily="MS LineDraw"/>

    </Grid>
</Window>
